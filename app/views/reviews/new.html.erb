<div class="border rounded-xl player-form p-5">
  <%= form_for @post_form, url: create_post_path, html: { class: 'space-y-4' } do |f| %>
    <div class="flex flex-col">
      <%= f.label :description, class: 'font-bold text-lg mb-2' %>
      <%= f.text_area :description, class: 'form-input mt-1 block w-full p-2 border border-gray-300 rounded-md' %>
    </div>
    <div class="flex flex-col">
      <%= f.label :tags, class: 'font-bold text-lg mb-2' %>
      <%= f.text_field :tags, class: 'form-input mt-1 block w-full p-2 border border-gray-300 rounded-md' %>
    </div>
    <%= f.submit 'Submit', class: 'mt-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700' %>
  <% end %>
</div>