  <% @reviews.each do |review| %>
  <div class="min-w-[350px] max-w-[450px] text-white card-background shadow-lg rounded-xl shadow-md hover:scale-105 border border-5 hover:border-amber-400 transform duration-200">
    <div class="flex flex-col p-8">
      <div class="flex items-center space-x-2 mb-4">
        <%= image_tag('profile.svg', class: 'h-[48px] w-auto border border-amber-400 p-2') %>
        <span class="font-medium"><%= review.name || 'Anonymous' %></span>
      </div>
      <div class="flex w-full gap-2">
        <p class="text-xs font-medium"><%= review.content %></p>
        <%= image_tag('empty_image.svg', class: 'h-[120px] w-auto border p-2 ml-auto float-right') %>
      </div>
      <div class="flex mt-1 justify-start sm text-amber-400 font-semibold"><%= review.summoner_name %></div>
    </div>
  </div>
<% end %>